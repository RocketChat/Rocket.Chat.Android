<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/colorMessageBackgroundDark"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/message_top_and_bottom_padding"
    android:paddingEnd="@dimen/message_start_and_end_padding"
    android:paddingStart="@dimen/message_start_and_end_padding"
    android:paddingTop="@dimen/message_top_and_bottom_padding">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/message_sender_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/message_sender_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Aniket Singh"
        android:textColor="@color/colorMessageSenderName"
        android:textSize="@dimen/message_sender_name_text_size"
        app:layout_constraintBottom_toTopOf="@+id/message_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_sender_avatar"
        app:layout_constraintTop_toTopOf="@id/message_sender_avatar" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="10am"
        android:textColor="@color/colorMessageSenderName"
        android:textSize="@dimen/message_timestamp_text_size"
        app:layout_constraintBottom_toBottomOf="@id/message_sender_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/message_sender_avatar"
        app:layout_constraintTop_toBottomOf="@id/message_sender_name" />

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/white"
        android:textSize="@dimen/message_text_size"
        app:layout_constraintStart_toStartOf="@id/message_sender_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message_sender_avatar" />

    <TextView
        android:id="@+id/attachments_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/msg_attachments_exist"
        android:textColor="@color/colorMessageAttachments"
        android:textSize="@dimen/message_text_size"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/message_sender_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/message" />

</androidx.constraintlayout.widget.ConstraintLayout>