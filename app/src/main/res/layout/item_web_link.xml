<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_web_link"
        android:layout_width="@dimen/image_web_link_preview"
        android:layout_height="@dimen/image_web_link_preview"
        android:layout_marginEnd="@dimen/margin_web_link_preview"
        android:contentDescription="@string/url_preview_image"
        app:actualImageScaleType="centerCrop"
        app:roundedCornerRadius="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            style="@style/WebLink.TextView.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_web_link_preview_text"
            android:text="@string/url_preview_title" />

        <TextView
            android:id="@+id/text_description"
            style="@style/WebLink.TextView.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_web_link_preview_text"
            android:text="@string/url_preview_description" />

        <TextView
            android:id="@+id/text_link"
            style="@style/WebLink.TextView.Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_web_link_preview_text"
            android:visibility="gone"
            android:text="@string/url_preview_link" />

    </LinearLayout>

</LinearLayout>