<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/room_avatar"
            app:roundedCornerRadius="3dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp" />
        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_below="@id/room_avatar"
            style="@style/RoomInfo.Title.TextView"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/room_read_only_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/room_name"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_margin="2.5dp"
            android:text="@string/msg_this_room_is_read_only"
            android:textColor="#ab2a2a"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_below="@id/room_read_only_status"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/top_divider"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:id="@+id/room_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_divider"
                style="@style/RoomInfo.Title.TextView"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_description" />
            <TextView
                android:id="@+id/room_description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RoomInfo.Info.TextView"
                android:layout_alignStart="@id/room_description_title"
                android:layout_below="@id/room_description_title"
                android:layout_marginBottom="5dp" />
            <View
                android:id="@+id/room_description_divider"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/room_description_text"/>
            <TextView
                android:id="@+id/room_announcement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RoomInfo.Title.TextView"
                android:layout_below="@id/room_description_divider"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_announcement"/>
            <TextView
                android:id="@+id/room_announcement_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RoomInfo.Info.TextView"
                android:layout_alignStart="@id/room_announcement_title"
                android:layout_below="@id/room_announcement_title"
                android:layout_marginBottom="5dp"/>
            <View
                android:id="@+id/room_announcement_divider"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/room_announcement_text"/>
            <TextView
                android:id="@+id/room_topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RoomInfo.Title.TextView"
                android:layout_below="@id/room_announcement_divider"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_topic" />
            <TextView
                android:id="@+id/room_topic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/RoomInfo.Info.TextView"
                android:layout_alignStart="@id/room_topic_title"
                android:layout_below="@id/room_topic_title"
                android:layout_marginBottom="5dp" />
            <View
                android:id="@+id/room_topic_divider"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/room_topic_text"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>