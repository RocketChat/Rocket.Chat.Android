<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contacts.ContactsFragment">

    <LinearLayout
        android:layout_marginTop="12dp"
        android:id="@+id/create_new_channel_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/Create_A_New_Channel"
            android:src="@drawable/ic_community_black" />

        <TextView
            android:layout_marginStart="12dp"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widechat_new_channel"/>

    </LinearLayout>

    <TextView
        android:id="@+id/contacts_heading"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/create_new_channel_button"
        android:fontFamily="@string/font_fontFamily_widechat"
        android:paddingBottom="12dp"
        android:text="@string/Invite_contacts"/>

    <FrameLayout
        android:id="@+id/contacts_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider3">
    </FrameLayout>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignBottom="@+id/contacts_heading"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider" />
</RelativeLayout>